<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:seekBarStyle">@android:style/Widget.SeekBar</item>
    </style>

    <style name="PlayerTheme" parent="AppTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="PageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/talk_common_margin</item>
        <item name="android:src">@drawable/polyv_iv_emo_dot</item>
    </style>

    <style name="iv_click_controller_port_bottom">
        <item name="android:layout_width">@dimen/bottom_layout_height</item>
        <item name="android:layout_height">@dimen/bottom_layout_height</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/polyv_commom_click_color_gray</item>
        <item name="android:scaleType">center</item>
    </style>

    <!--playback-->
    <style name="iv_click_controller_land_top">
        <item name="android:layout_width">@dimen/top_layout_height_s</item>
        <item name="android:layout_height">@dimen/top_layout_height_s</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/polyv_commom_click_color_gray</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="tv_click_controller_land_center">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">@color/polyv_bit_text_color</item>
        <item name="android:textSize">@dimen/center_text_size_l</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="live_bit_select_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">@color/polyv_bit_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="tv_click_controller_land_center_not_click">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/top_layout_color_white</item>
        <item name="android:textSize">@dimen/center_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tv_click_controller_land_center_s">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">@color/polyv_bit_text_color</item>
        <item name="android:textSize">@dimen/center_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="iv_click_controller_land_top_l">
        <item name="android:layout_width">@dimen/top_layout_dm_height</item>
        <item name="android:layout_height">@dimen/top_layout_dm_height</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/polyv_commom_click_color_gray</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="iv_click_controller_land_top_dm">
        <item name="android:layout_width">@dimen/dmcolor_commom_wh</item>
        <item name="android:layout_height">@dimen/dmcolor_commom_wh</item>
        <item name="android:clickable">true</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:translationX">@dimen/dmcolor_commom_tran</item>
        <item name="android:translationY">@dimen/talk_common_margin</item>
    </style>

    <style name="tv_click_controller_land_center_s_padding_tb" parent="tv_click_controller_land_center_s">
        <item name="android:paddingTop">@dimen/talk_common_margin</item>
        <item name="android:paddingBottom">@dimen/talk_common_margin</item>
    </style>

    <style name="iv_click_controller_land_center">
        <item name="android:layout_width">@dimen/center_right_layout_height</item>
        <item name="android:layout_height">@dimen/center_right_layout_height</item>
        <item name="android:clickable">true</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="iv_click_controller_land_bottom">
        <item name="android:layout_width">@dimen/bottom_layout_height_l</item>
        <item name="android:layout_height">@dimen/bottom_layout_height_l</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@drawable/polyv_commom_click_color_gray</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="tv_click_controller_land_bottom">
        <item name="android:layout_width">@dimen/bottom_layout_height_l</item>
        <item name="android:layout_height">@dimen/bottom_layout_height_l</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginRight">@dimen/center_bottom_margin_left_s</item>
        <item name="android:textColor">@color/polyv_play_bt_color</item>
        <item name="android:textSize">@dimen/bottom_right_text_size</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@drawable/polyv_commom_click_color_gray</item>
    </style>
    <!--playback-->
    <style name="tv_click_popupwindow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:paddingLeft">?attr/dialogPreferredPadding</item>
        <item name="android:paddingTop">@dimen/talk_common_margin_l</item>
        <item name="android:paddingBottom">@dimen/talk_common_margin_l</item>
        <item name="android:background">@drawable/polyv_commom_click_color_gray</item>
        <item name="android:textColor">@color/top_right_text_color_black</item>
        <item name="android:textSize">@dimen/abc_text_size_subhead_material</item>
    </style>
    <style name="popupwindown_anim_style">
        <item name="android:windowEnterAnimation">@anim/polyv_push_up</item>
        <item name="android:windowExitAnimation">@anim/polyv_pull_down</item>
    </style>
</resources>
