<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/top_layout_color_white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/center_tab_height"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_chat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/polyv_commom_click_color_gray"
            android:clickable="true"
            android:gravity="center"
            android:text="互动聊天"
            android:textColor="@color/bottom_et_color_gray"
            android:textSize="@dimen/tv_textsize" />

        <TextView
            android:id="@+id/tv_online"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/polyv_commom_click_color_gray"
            android:clickable="true"
            android:gravity="center"
            android:text="在线列表"
            android:textColor="@color/bottom_et_color_gray"
            android:textSize="@dimen/tv_textsize" />

        <TextView
            android:id="@+id/tv_playback"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/polyv_commom_click_color_gray"
            android:clickable="true"
            android:gravity="center"
            android:text="回放列表"
            android:textColor="@color/bottom_et_color_gray"
            android:textSize="@dimen/tv_textsize" />

        <TextView
            android:id="@+id/tv_question"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/polyv_commom_click_color_gray"
            android:clickable="true"
            android:gravity="center"
            android:text="咨询提问"
            android:textColor="@color/bottom_et_color_gray"
            android:textSize="@dimen/tv_textsize" />
    </LinearLayout>

    <View
        android:id="@+id/v_line"
        android:layout_width="@dimen/center_tab_line_width"
        android:layout_height="@dimen/center_tab_line_height"
        android:background="@color/center_view_color_blue"></View>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/top_sline_color_gray"></View>

</LinearLayout>