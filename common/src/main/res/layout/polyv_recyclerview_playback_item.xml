<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/rl_height_l"
    android:layout_marginTop="@dimen/common_margin_tb"
    android:background="@drawable/polyv_rl_white_to_gray"
    android:paddingLeft="@dimen/common_margin_lr"
    android:paddingRight="@dimen/rl_paddingright">

    <com.easefun.polyvsdk.live.view.PolyvGrayImageView
        android:id="@+id/iv_cover"
        android:layout_width="@dimen/top_left_layout_width"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/polyv_pic_demo" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/iv_cover">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_margin_lr"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="3"
            android:text="一行测试文本。。。。"
            android:textColor="@color/center_bottom_sb_pg_color_blue"
            android:textSize="@dimen/tv_textsize_l" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_title"
            android:layout_below="@id/tv_title"
            android:layout_marginTop="@dimen/bottom_tv_margin_top">

            <ImageView
                android:id="@+id/iv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/polyv_time" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/center_right_tv_margin_left"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv_time"
                android:text="20:03"
                android:textColor="@color/center_right_text_color_green"
                android:textSize="@dimen/center_right_text_size" />

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/center_right_tv_margin_left"
                android:text="ppt"
                android:textColor="@color/center_right_botton_color_purple"
                android:textSize="@dimen/center_right_text_size" />

            <TextView
                android:id="@+id/tv_playing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_centerVertical="true"
                android:text="正在播放"
                android:textColor="@color/center_bottom_text_color_red"
                android:textSize="@dimen/center_right_text_size" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>